@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>BlessedRSI - Faith-Based Investment Education</PageTitle>

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">
                    Faith Meets Finance
                </h1>
                <p class="lead mb-4">
                    Learn biblical stewardship through cutting-edge Epistemic RSI technology. 
                    Join a community of believers transforming their financial future with wisdom and humility.
                </p>
                <div class="d-flex gap-3">
                    <AuthorizeView>
                        <Authorized>
                            <a href="/backtest" class="btn btn-warning btn-lg">
                                <i class="fas fa-chart-line"></i> Start Testing Strategies
                            </a>
                        </Authorized>
                        <NotAuthorized>
                            <a href="/Account/Register" class="btn btn-warning btn-lg">
                                <i class="fas fa-user-plus"></i> Get Started Free
                            </a>
                            <a href="/about" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-info-circle"></i> Learn About E-RSI
                            </a>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="bg-white rounded shadow-lg p-4 text-dark">
                    <h5 class="text-primary">Today's Market Insight</h5>
                    <div class="row text-center">
                        <div class="col-6">
                            <h3 class="text-success">@avgERsi.ToString("F1")</h3>
                            <small class="text-muted">Average E-RSI</small>
                        </div>
                        <div class="col-6">
                            <h3 class="text-info">@humbleOpportunities</h3>
                            <small class="text-muted">Humble Opportunities</small>
                        </div>
                    </div>
                    <hr>
                    <blockquote class="blockquote-footer small">
                        <em>"The humble will be lifted up" - Luke 14:11</em>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</section>

